<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ScreenBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">


                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/back_arrow"
                    android:background="@drawable/light_bg_icons"
                    android:contentDescription="backButton"
                    style="@style/ImageButtonBack"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="170dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        style="@style/TextColor"
                        android:fontFamily="@font/gilroy"
                        android:textStyle="bold"
                        android:text="Add connection"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="60dp">


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/textView2"
                    android:fontFamily="@font/gilroy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:text="Host name"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/gilroy"
                    android:textSize="20sp"
                    style="@style/TextColor"
                    android:layout_weight="1"
                    android:text="Enter the name of the device" />

                <EditText
                    android:id="@+id/editHostName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:maxLength="12"
                    android:fontFamily="@font/gilroy"
                    android:hint= "PC or MyComputer" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:fontFamily="@font/gilroy"
                    android:text="IP ADDRESS"
                    android:textSize="23sp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:fontFamily="@font/gilroy"
                    android:textSize="17sp"
                    android:text="You need to use the ip address of your network, for example 192.168.2.256, 256.456.234.122, 10.0.0.105 " />

                <EditText
                    android:id="@+id/editIPAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/TextColor"
                    android:fontFamily="@font/gilroy"
                    android:layout_weight="1"
                    android:hint="192.168.0.168" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    style="@style/TextColor"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy"
                    android:layout_weight="1"
                    android:text="MAC ADDRESS"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    style="@style/TextColor"
                    android:fontFamily="@font/gilroy"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:text="Enter the mac address of the target computer, for example 00-B0-D0-63-C2-26 " />

                <EditText
                    android:id="@+id/editMACAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/gilroy"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:hint="XX:XX:XX:XX:XX:XX" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:text="Port"
                    android:fontFamily="@font/gilroy"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    style="@style/TextColor"
                    android:fontFamily="@font/gilroy"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:text="Enter the wake on LAN port. Usually, port 9 is supported by most Ethernet cards, but you can also try 7 or 0." />

                <EditText
                    android:id="@+id/editPort"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:inputType="number"
                    android:fontFamily="@font/gilroy"
                    android:text="9" />

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_marginTop="30dp"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:fontFamily="@font/gilroy"
                    android:text="SAVE"
                    android:textStyle="bold"
                    android:gravity="center"
                    style="@style/ButtonStyle"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>